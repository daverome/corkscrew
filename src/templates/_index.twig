{% set section = 'templates' %}
{% extends "_corkscrew-layout.twig" %}

{% block sectionName %}Templates{% endblock %}

{% block content %}

  {% set project =
    {
      htmlViewer: false
    }
  %}

  {% embed "_corkscrew-section.twig" %}

    {% block label %}
      Templates
    {% endblock %}

    {% block description %}
      Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam et lectus et tortor placerat euismod.
    {% endblock %}

    {% block block_content %}

      {% for template in templates %}

        <ul class="cs-template-list">
          <li class="cs-template-list__item">
            <a href="{{ template.url }}">{{ template.name }}</a>
          </li>
        </ul>

      {% endfor %}

    {% endblock %}

  {% endembed %}

{% endblock content %}
